[Unit]
Description=KDE Window Manager 
Requires=kglobalaccel.service kded.service

[Service]
ExecStart=/usr/bin/kwin_x11 --replace
BusName=org.kde.KWin
KillMode=none
Environment="DBUS_SESSION_BUS_ADDRESS=unix:path=%t/bus" XDG_CURRENT_DESKTOP=KDE KDE_FULL_SESSION=1 KDE_SESSION_VERSION=5

[Install]
Alias=window-manager.service
